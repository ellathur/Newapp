<%# @products.each do |product| %>
 <div class="col-sm-12 col-md-4 products">
   <% cache product do %>
    <% if product.image_url.present? %>
    <%= image_tag(product.image_url, class: "img-responsive") %>
    <% end %>
    <h1><%= link_to product.name, product, class: "productname" %></h1>
    <p><%= product.description %></p>
    <p><%= product.colour%></p>
    <p><strong>Price: Â£</strong> <%= product.price%></p>
  <% end %>

</div><!-- /col -->
<%# end %>
