<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <div class="row show">
    <h2 class="caption"><%= @product.name %></h2>
    <div class="col-xs-12 col-md-12 thumbnail">
        <% unless @product.image_url.blank? %>
        <%= image_tag(@product.image_url, class: "img-responsive", data_zoom_image: @product.image_url) %>
      <% end %>
    <div class="col-xs-12">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
        <strong>Product Colour:</strong>
        <%= @product.colour %>
      </p>
      <p>
        <strong>Price:Â£</strong>
      <%= @product.price %>
      </p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      </div>
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div>

    <% if signed_in? %>
      <div class="pages col-sm-12">
        <%= render "new_comment" %>
        <%= render "comments" %>
      </div>
    <% end %>
    <div class="pages col-sm-12">
      <%= will_paginate @comments %>
    </div>


    <%= link_to 'Edit', edit_product_path(@product),  class:'btn btn-warning' %> |
    <%= link_to 'Back', products_path, class:'btn btn-default' %> |
    <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?'},  class:'btn btn-danger' %>
  </div>
</div>
